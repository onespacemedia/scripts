#! /bin/bash
COMMIT_MESSAGE=$1
WEBFACTION_ACCOUNT=$2
APPLICATION_NAME=${3:-$WEBFACTION_ACCOUNT}
FOLDER_NAME=${3:-$APPLICATION_NAME}

git add .
git commit -am "$COMMIT_MESSAGE"

if [ $? == 0 ]; then
    git push

    if [ $2 ]; then
        echo "update_app $FOLDER_NAME; exit" | ssh -tt $WEBFACTION_ACCOUNT@$WEBFACTION_ACCOUNT.webfactional.com
    fi
fi
